All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul class=job_<%= job.id %>>
    <%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %>
    <br>
    <%= link_to "Edit", edit_company_job_path(@company, job) %>
    <%= link_to "Delete", company_job_path(@company, job), method: "delete" %>
  </ul>
<% end %>

<p><%= link_to "Add a new job", new_company_job_path %>
