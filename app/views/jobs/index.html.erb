<h2>All Jobs for <strong><%= @company.name %></strong></h2>

<% @jobs.each do |job| %>
  <ul class=job_<%= job.id %>>
    <%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %>
    <br>
    <%= link_to "Edit", edit_company_job_path(@company, job) %>
    <%= link_to "Delete", company_job_path(@company, job), method: "delete" %>
  </ul>
<% end %>

<p><%= link_to "Add a new job", new_company_job_path %></p>

<h3>Contacts <%= @company.contacts.count %></h3>
  <%= render partial: 'companies/contact', collection: @company.contacts %>
  <%= render partial: 'contacts/form' %>

<p><%= link_to "<< Back to all companies", companies_path %></p>
